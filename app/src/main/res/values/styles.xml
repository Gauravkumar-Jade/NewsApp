<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTabsStyle">
        <item name="tabIndicator">@drawable/bg_tab_indicator</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabTextAppearance">@style/tabs_text</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="tabs_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>